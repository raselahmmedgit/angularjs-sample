@model lab.ngdemo.postgresql.Models.Employee
<script src="~/Scripts/App/App.js"></script>
@using (Html.BeginForm("CreateAjax", "Employee", new { area = "" }, FormMethod.Post, new { id = "frmEmployeeEditor", @class = "form" }))
{
    @Html.HiddenFor(model => model.emp_id)
    @Html.ValidationSummary(true)
    <div class="form-group">
        <label for="emp_emailaddress">Email address:</label>
        @Html.EditorFor(model => model.emp_emailaddress)
        @Html.ValidationMessageFor(model => model.emp_emailaddress)
    </div>
    <div class="form-group">
        <label for="emp_name">Name:</label>
        @Html.EditorFor(model => model.emp_name)
        @Html.ValidationMessageFor(model => model.emp_name)
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}
<script src="@Url.Content("~/Scripts/App/Employee.js")" type="text/javascript"></script>
<script type="text/javascript">

    $(document).ready(function () {

        Employee.init();

    });

</script>