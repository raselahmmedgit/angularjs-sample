@{
    ViewBag.Title = "Employee ng with DataTables";
}
<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/responsive.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
<script src="~/Scripts/DataTables/dataTables.bootstrap.min.js"></script>
<div class="row">
    <div class="col-md-12">
        <h2>Employee</h2>
    </div>
</div>
<hr />
<div class="row" ng-controller="EmployeeController as ctrl">

    <!--Add/Edit-->
    <div class="form-horizontal col-md-12" ng-show="EmployeeFormShow">
        <form name="EmployeeForm" ng-submit="ctrl.SubmitEmployeeForm()" novalidate>
            <div class="form-group" ng-class="{ 'has-error' : EmployeeForm.Name.$invalid && !EmployeeForm.Name.$pristine }">
                <label class="col-md-2 control-label">Name</label>
                <div class="col-md-10">
                    <input type="text" name="Name" ng-model="Employee.Name" class="form-control" required>
                </div>
                <div class="col-md-offset-2 col-md-10 help-block" ng-show="EmployeeForm.Name.$invalid && !EmployeeForm.Name.$pristine">Name is required.</div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Email</label>
                <div class="col-md-10">
                    <input type="text" name="EmailAddress" ng-model="Employee.EmailAddress" class="form-control" required>
                </div>
                <div class="col-md-offset-2 col-md-10 help-block" ng-show="EmployeeForm.EmailAddress.$invalid && !EmployeeForm.EmailAddress.$pristine">Enter a valid email address.</div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Mobile</label>
                <div class="col-md-10">
                    <input type="text" name="Mobile" ng-model="Employee.Mobile" ng-minlength="4" ng-maxlength="12" class="form-control" required>
                </div>
                <div class="col-md-offset-2 col-md-10 help-block" ng-show="EmployeeForm.Mobile.$invalid && !EmployeeForm.Mobile.$pristine">Mobile is required.</div>
                <div class="col-md-offset-2 col-md-10 help-block" ng-show="EmployeeForm.Mobile.$error.minlength">Mobile is too short.</div>
                <div class="col-md-offset-2 col-md-10 help-block" ng-show="EmployeeForm.Mobile.$error.maxlength">Mobile is too long.</div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary" ng-show="EmployeeSaveShow" ng-disabled="EmployeeForm.$invalid">Save</button>
                    <button type="button" class="btn btn-warning" ng-click="ctrl.Cancel()">Cancel</button>
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-12">
        <div class="col-md-offset-10">
            <input type="button" value="Add" class="btn btn-primary" ng-click="ctrl.Add()" />
        </div>
    </div>
    <hr />
    <div class="col-md-12">

        <table id="employeeDataTable" class="table table-striped table-bordered dt-responsive nowrap">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

    </div>

</div>

<script src="~/Scripts/App/EmployeeDataTablesNew.js"></script>
