@{
    ViewBag.Title = "Index";
}
<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/responsive.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
<script src="~/Scripts/DataTables/dataTables.bootstrap.min.js"></script>
<div class="row">
    <div class="col-md-12">
        <h2>Employee</h2>
    </div>
</div>
<hr />
<div class="row">

    <!--Add/Edit-->
    <div class="form-horizontal col-md-12" id="divEmployeeForm" style="display: none;">
        <form role="form" id="frmEmployee">
            <div class="form-group">
                <label class="col-md-2 control-label">Name</label>
                <div class="col-md-10">
                    <input type="hidden" name="Id" id="Id">
                    <input type="text" name="Name" id="Name" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Email</label>
                <div class="col-md-10">
                    <input type="text" name="EmailAddress" id="EmailAddress" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Mobile</label>
                <div class="col-md-10">
                    <input type="text" name="Mobile" id="Mobile" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary" id="btnEmployeeSave">Save</button>
                    <button type="button" class="btn btn-warning" id="btnEmployeeCancel">Cancel</button>
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-12">
        <div class="col-md-offset-10">
            <input type="button" value="Add" class="btn btn-primary" id="btnEmployeeAdd" />
        </div>
    </div>
    <hr />
    <div class="col-md-12">
        
        <table id="employeeDataTable" class="table table-striped table-bordered dt-responsive nowrap">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

    </div>
    <hr />
    <div class="col-md-12">
        <div class="col-md-2">
            <a href="/Employee/DataTables" class="btn btn-primary">Data Tables</a>
        </div>
        <div class="col-md-2">
            <a href="/Employee/DataTablesRowClick" class="btn btn-primary">Data Tables Row Click</a>
        </div>
        <div class="col-md-2">
            <a href="/Employee/DataTablesNew" class="btn btn-primary">Data Tables New</a>
        </div>
        <div class="col-md-2">
            <a href="/Employee/DataTablesFilterColumn" class="btn btn-primary">Data Tables Filter Column</a>
        </div>
        <div class="col-md-2">
        </div>
        <div class="col-md-2">
        </div>
    </div>
</div>

<script src="~/Scripts/App/Employee.js"></script>